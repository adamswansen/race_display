# Race Display Environment Configuration
# Copy this to .env and fill in your values

# ChronoTrack API Credentials
CHRONO_USER_ID=your_username
CHRONO_PASSWORD=your_password
CHRONO_EVENT_ID=your_default_event_id

# Database Configuration (Server Mode Only)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=raw_tag_data
DB_USER=race_timing_user
DB_PASSWORD=your_secure_password

# Application Settings
RACE_DISPLAY_MODE=local  # Change to 'server' for production
DEBUG_TIMING=false       # Set to 'true' for verbose timing logs
